<% cache(["topic/#{@topic.id}-v2",reply]) do %>
<div class="reply<%= ' popular' if reply.popular? %>" id="reply<%= reply_counter + 1 %>">
  <% if !reply.deleted_at.blank? %>
    <div class="deleted"><%= reply_counter + 1 %><%= t("common.floor")%> 已删除.</div>
  <% else %>
    <div class="pull-left face"><%= user_avatar_tag(reply.user, :normal) %></div>
    <div class="infos">
      <div class="info">
        <span class="name">
          <%= user_name_tag(reply.user) %>
          <%= reply_counter + 1 %><%= t("common.floor")%>, <%= timeago(reply.created_at) %>
        </span>
        <% if reply.deleted_at.blank? %>
        <span class="opts">
          <%= likeable_tag(reply, :cache => true) %>
          <%= link_to("", edit_topic_reply_path(@topic,reply), :class => "edit icon small_edit", 'data-uid' => reply.user_id, :title => "修改回帖")%>
          <%= link_to("", "#", 'data-floor' => reply_counter + 1, 'data-login' => reply.user.login,
              :title => t("topics.reply_this_floor"), :class => "icon small_reply" )
          %>
        </span>
        <% end %>
      </div>
      <div class="body">
        <%= raw reply.body_html %>
      </div>
      <span class="opts">
      </span>
    </div>
  <% end %>
</div>
<% end %>
